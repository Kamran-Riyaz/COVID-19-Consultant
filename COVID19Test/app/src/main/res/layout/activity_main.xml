<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/coronavirusgetty"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/holo_green_dark"
                android:gravity="center_horizontal|center_vertical"
                android:text="Check Your Symtoms"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/FeverCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Fever"
                />

            <CheckBox
                android:id="@+id/DryCoughCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Dry Cough" />

            <CheckBox
                android:id="@+id/DifficultyBreathingCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Difficulty Breathing" />

            <CheckBox
                android:id="@+id/LackOfSmellCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Lack of Sense of Smell" />

            <CheckBox
                android:id="@+id/LackOfTastecheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Lack of Taste" />

            <CheckBox
                android:id="@+id/GastrointestinalCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Gastrointestinal Problems" />

            <CheckBox
                android:id="@+id/ConfusionCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@android:color/background_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Confusion or Inability to Arouse" />

            <CheckBox
                android:id="@+id/TravelHistoryCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:background="@android:color/background_light"
                android:gravity="center_vertical"
                android:text="Travel History where the Coronavirus is Widespread" />

            <Button
                android:id="@+id/ConsultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="20sp"
                android:onClick="ConsultClick"
                android:text="Consult Me" />

            <Button
                android:id="@+id/AboutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About COVID-19 Consultant"
                android:onClick="AboutClick"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>